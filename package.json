{
  "name": "counting-words",
  "version": "1.0.0",
  "private": true,
  "main": "./src/electron.js",
  "description": "A dead simple - ahem, over-engineered - program that will count words and give you ğ“¯ğ“ªğ“·ğ“¬ğ”‚ stats about them.",
  "author": "Robbin \"Roboroads\" Schepers <robbin@deschepers.nl>",
  "build": {
    "appId": "nl.deschepers.counting-words"
  },
  "scripts": {
    "validate": "svelte-check",
    "rollup-dev": "rollup -c -w",
    "rollup-build": "rollup -c",
    "tailwind-dev": "postcss src/app/style/tailwind.pcss -o public/build/tailwind.css -w",
    "tailwind-build": "cross-env NODE_ENV=production postcss src/app/style/tailwind.pcss -o public/build/tailwind.css",
    "serve": "sirv public",
    "dev": "run-p rollup-dev tailwind-dev start-dev",
    "build": "run-s rollup-build tailwind-build",
    "start-dev": "cross-env APP_IS_DEV=true electron .",
    "start": "electron .",
    "test": "jest",
    "clean": "rm -r dist; rm -r public"
  },
  "devDependencies": {
    "@babel/core": "^7.13.10",
    "@babel/preset-env": "^7.13.10",
    "@babel/preset-typescript": "^7.13.0",
